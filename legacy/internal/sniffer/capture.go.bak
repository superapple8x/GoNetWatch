package sniffer

import (
	"fmt"
	"log"
	"time"

	"github.com/google/gopacket"
	"github.com/google/gopacket/pcap"
	"gonetwatch/internal/models"
)

// StartCapture begins capturing packets on the specified interface.
// It sends processed PacketData to the provided channel.
func StartCapture(device string, packetChan chan<- models.PacketData) {
	// Open device
	handle, err := pcap.OpenLive(device, 1600, true, pcap.BlockForever)
	if err != nil {
		log.Fatal(err)
	}
	defer handle.Close()

	// Set filter (optional, e.g., only TCP/UDP)
	// var filter string = "tcp or udp"
	// err = handle.SetBPFFilter(filter)
	// if err != nil {
	// 	log.Fatal(err)
	// }

	fmt.Printf("Capturing on device %s...\n", device)

	packetSource := gopacket.NewPacketSource(handle, handle.LinkType())
	for packet := range packetSource.Packets() {
		// Basic processing for now
		data := models.PacketData{
			Timestamp: time.Now(),
			Length:    len(packet.Data()),
		}
		
		// Send to channel (non-blocking if possible, but for now blocking is fine)
		packetChan <- data
	}
}
